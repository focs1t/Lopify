<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="User Name"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Любимые песни"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/emptyFavoritesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Избранных треков нет"
        android:visibility="gone"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:padding="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userFavoritesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Комментарии"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/emptyCommentsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Комментариев нет"
        android:visibility="gone"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:padding="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userCommentsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
</LinearLayout>